<div class="container new-item-form">
  <div class="title-price"> <strong> <%= @presenter.name %> </strong></div>
  <p> <strong> Description:</strong>  <%= @presenter.description %></p>
  <p> Buy it Now Price: $<%= @presenter.buy_it_now_price %> </p>
  <%= button_to "Buy Now", create_purchase_path(item_id: @presenter.id), class: "btn btn-xs btn-buy-now" %>
  <p> Starting Bid: $<%= @presenter.starting_bid_price %> </p>
  <p> Current Bid: $<%= @presenter.highest_bid %> </p>
  <%= form_tag create_bid_path(item_id: @presenter.id), method: :post, :class => "form-inline" do %>
    <%= text_field_tag :amount %>
    <%= submit_tag "Place Bid", class: "btn btn-default" %>
  <% end %>
  <div id="countdown">
    <p> Time Left Until End of Auction: </p>
    <span id="days"> Days <%= @presenter.days %> </span>
    <span id="hours"> Hours <%=  @presenter.hours %> </span>
    <span id="minutes"> Minutes <%= @presenter.minutes %> </span>
    <span id="seconds"> Seconds <%= @presenter.seconds %> </span>
  </div>
  <% if @presenter.errors %>
    <ul>
      <% @presenter.errors.each do |error| %>
        <li> <%= error %> </li>
      <% end %>
    </ul>
  <% end %>
</div>
