<h2> Add Item </h2>

<%= form_for @item, url: {action: "create"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit "Create" %>
<% end %>
